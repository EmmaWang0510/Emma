<body>
    <h1>ÈõªÂ≠êÁôΩÊùø</h1>
    <div id="board"></div>
    <div id="inputSection">
        <input type="text" id="suggestionInput" placeholder="Ëº∏ÂÖ•ÊÇ®ÁöÑÂª∫Ë≠∞..." />
        <button id="submitButton">ÂºµË≤º</button>
    </div>
    <script>
        const board = document.getElementById('board');
        const suggestionInput = document.getElementById('suggestionInput');
        const submitButton = document.getElementById('submitButton');

        const suggestions = [];

        const renderSuggestions = () => {
            board.innerHTML = '';
            suggestions.forEach((suggestion, index) => {
                const div = document.createElement('div');
                div.className = 'suggestion';
                if (suggestion.marked) div.classList.add('marked');

                const text = document.createElement('span');
                text.innerText = `${index + 1}. ${suggestion.text} (${suggestion.likes} üëç)`;

                const buttons = document.createElement('div');
                buttons.className = 'buttons';

                const likeBtn = document.createElement('button');
                likeBtn.className = 'like-btn';
                likeBtn.innerText = 'ÂñúÊ≠°';
                likeBtn.onclick = () => {
                    suggestions[index].likes++;
                    renderSuggestions();
                };

                const deleteBtn = document.createElement('button');
                deleteBtn.className = 'delete-btn';
                deleteBtn.innerText = 'Âà™Èô§';
                deleteBtn.onclick = () => {
                    suggestions.splice(index, 1);
                    renderSuggestions();
                };

                const markBtn = document.createElement('button');
                markBtn.className = 'mark-btn';
                markBtn.innerText = suggestion.marked ? 'ÂèñÊ∂àÊ®ôË®ò' : 'Ê®ôË®ò';
                markBtn.onclick = () => {
                    suggestions[index].marked = !suggestions[index].marked;
                    renderSuggestions();
                };

                buttons.appendChild(likeBtn);
                buttons.appendChild(deleteBtn);
                buttons.appendChild(markBtn);

                div.appendChild(text);
                div.appendChild(buttons);
                board.appendChild(div);
            });
        };

        submitButton.addEventListener('click', () => {
            const suggestion = suggestionInput.value.trim();
            if (suggestion) {
                suggestions.push({ text: suggestion, likes: 0, marked: false });
                suggestionInput.value = '';
                renderSuggestions();
            } else {
                alert('Ë´ãËº∏ÂÖ•Âª∫Ë≠∞ÔºÅ');
            }
        });
    </script>
